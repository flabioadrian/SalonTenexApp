<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/card_background"
    android:padding="24dp">

    <TextView
        android:id="@+id/dialogTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Editar Servicio"
        android:textColor="@color/text_dark_brown"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="24dp" />

    <!-- Nombre del Servicio -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:boxBackgroundColor="@color/warm_beige"
        app:errorEnabled="true">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editServiceName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nombre del servicio"
            android:maxLines="1"
            android:textColor="@color/text_dark_brown"
            android:textColorHint="@color/text_medium_brown" />

    </com.google.android.material.textfield.TextInputLayout>

    <!-- Costo -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:boxBackgroundColor="@color/warm_beige"
        app:errorEnabled="true">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editServiceCost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Costo"
            android:inputType="numberDecimal"
            android:maxLines="1"
            android:textColor="@color/text_dark_brown"
            android:textColorHint="@color/text_medium_brown" />

    </com.google.android.material.textfield.TextInputLayout>

    <!-- Descripción -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:boxBackgroundColor="@color/warm_beige"
        app:errorEnabled="true">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editServiceDescription"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:gravity="top"
            android:hint="Descripción del servicio"
            android:inputType="textMultiLine"
            android:maxLines="5"
            android:textColor="@color/text_dark_brown"
            android:textColorHint="@color/text_medium_brown" />

    </com.google.android.material.textfield.TextInputLayout>

    <!-- Estado (solo visible en edición) -->
    <LinearLayout
        android:id="@+id/statusContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="24dp"
        android:visibility="visible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Estado actual:"
            android:textColor="@color/text_dark_brown"
            android:textSize="16sp"
            android:layout_marginEnd="12dp" />

        <TextView
            android:id="@+id/textServiceStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Activo"
            android:textColor="@color/green"
            android:textSize="16sp"
            android:textStyle="bold"
            android:paddingHorizontal="12dp"
            android:paddingVertical="4dp"
            android:background="@drawable/status_background" />

    </LinearLayout>

    <!-- Botones -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3">

        <Button
            android:id="@+id/buttonSave"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Guardar"
            android:backgroundTint="@color/green"
            android:textColor="@color/white"
            android:layout_marginEnd="8dp"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/buttonDisable"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Desactivar"
            android:backgroundTint="@color/orange"
            android:textColor="@color/white"
            android:layout_marginEnd="8dp"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/buttonCancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Cancelar"
            android:backgroundTint="@color/error_red"
            android:textColor="@color/white"
            android:textAllCaps="false" />

    </LinearLayout>

</LinearLayout>